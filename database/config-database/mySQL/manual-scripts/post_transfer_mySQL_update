-- hl7receiver
DELETE FROM config.config
WHERE app_id = 'hl7receiver';
INSERT INTO config.config
(
	app_id,
	config_id,
	config_data
)
VALUES
('hl7receiver', 'url', '"jdbc:mysql://<HOSTNAME>:3306/hl7receiver?useSSL=false'),
('hl7receiver', 'username', '<USERNAME>'),
('hl7receiver', 'password', '<PASSWORD>');

